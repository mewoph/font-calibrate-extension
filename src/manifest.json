{
  "manifest_version": 2,
  "name": "TypeTuner",
  "homepage_url": "https://github.com/mewoph/typetuner-extension",
  "description": "Test local variable & static fonts on any web page",
  "default_locale": "en",
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "24": "icons/24.png",
    "36": "icons/36.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "TypeTuner",
    "default_icon": {
      "16": "icons/16.png",
      "19": "icons/19.png",
      "24": "icons/24.png",
      "36": "icons/36.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["js/content.js"]
  }]
}
